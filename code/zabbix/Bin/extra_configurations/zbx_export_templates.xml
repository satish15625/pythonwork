<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>5.0</version>
    <date>2020-07-17T09:56:34Z</date>
    <groups>
        <group>
            <name>Templates/Applications</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Auto fuzzytime trigger for Zabbix Proxy</template>
            <name>Auto fuzzytime trigger for Zabbix Proxy</name>
            <description>This template must be attached to Zabbix server</description>
            <groups>
                <group>
                    <name>Templates/Applications</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Proxy last access</name>
                </application>
            </applications>
            <discovery_rules>
                <discovery_rule>
                    <name>Discover all proxies</name>
                    <type>EXTERNAL</type>
                    <key>list-all-proxies.py</key>
                    <delay>1h</delay>
                    <item_prototypes>
                        <item_prototype>
                            <name>Last access for $2</name>
                            <type>INTERNAL</type>
                            <key>zabbix[proxy,{#PNAME},lastaccess]</key>
                            <delay>1s</delay>
                            <applications>
                                <application>
                                    <name>Proxy last access</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{fuzzytime(50s)}=0</expression>
                                    <name>{#PNAME} proxy is not reachable for 1 minutes</name>
                                    <priority>HIGH</priority>
                                    <manual_close>YES</manual_close>
                                    <tags>
                                        <tag>
                                            <tag>PROXY</tag>
                                            <value>{#PNAME}</value>
                                        </tag>
                                    </tags>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                    <preprocessing>
                        <step>
                            <type>JAVASCRIPT</type>
                            <params>var lld = [];
var lines = value.split(&quot;\n&quot;);
var lines_num = lines.length;
for (i = 0; i &lt; lines_num; i++)
{
  var row = {};
  row[&quot;{#PNAME}&quot;] = lines[i]
  lld.push(row);
}
return JSON.stringify(lld);</params>
                        </step>
                    </preprocessing>
                </discovery_rule>
            </discovery_rules>
            <macros>
                <macro>
                    <macro>{$PROXYFUZZYTIME}</macro>
                    <value>30m</value>
                </macro>
            </macros>
        </template>
    </templates>
</zabbix_export>

